@{
    ViewBag.Title = "";
}

<!DOCTYPE html>
<html>
<body>

    <h2>Mapa ciekawych miejsc w Twojej okolicy</h2>

    <a href="#" id="get_location">Pokaż obecną lokalizację</a>
    <div id="map">
        <iframe id="google_map" width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.pl?z=6&output=embed"><</iframe>
    </div>

    <script>
        var c = function (pos) {
            var lat = pos.coords.latitude,
                long = pos.coords.longitude,
                coords = lat + ', ' + long;

            document.getElementById('google_map').setAttribute('src', 'https://maps.google.pl?q=' + coords +' &z=15&output=embed');
        }


        document.getElementById('get_location').onclick = function () {
            navigator.geolocation.getCurrentPosition(c);
            return false;
        }
    </script>

</body>
</html>